<div class="container">
    <h1>Log In</h1>
    <%= form_tag login_path do %>
        <div class="form-group form-row">
            <div class="col-5">
                <%= label_tag "Username"%>
                <%= text_field_tag "username", nil, :class => "form-control" %>
            </div>
        </div>
        <div class="form-group form-row">
            <div class="col-5">
                <%= label_tag "Password"%>
                <%= text_field_tag "password", nil, :class => "form-control" %>
            </div>
        </div>
        <div class="form-group form-row">
            <div class="col-5">
                <%= submit_tag "Log In", :class => "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>