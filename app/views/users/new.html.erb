<div class="container">
    <h1>Sign Up</h1>
    <%= form_for @user do |f| %>
        <div class="form-group form-row">
            <div class="col-5">
                <%= f.label "Email"%>
                <%= f.text_field :email, :class => "form-control" %>
            </div>
        </div>
            <div class="form-group form-row">
            <div class="col-5">
                <%= f.label "Username"%>
                <%= f.text_field :username, :class => "form-control" %>
            </div>
        </div>
            <div class="form-group form-row">
            <div class="col-5">
                <%= f.label "Password"%>
                <%= f.text_field :password, :class => "form-control" %>
            </div>
        </div>
            <div class="form-group form-row">
            <div class="col-5">
                <%= f.submit "Sign Up", :class => "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>